<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="styles/user.css">
</head>
<body>
    <%- include('../partials/usernav') %>
    <div class="dashboard-container">
        <h2>Welcome back, <%= user.username %>! ðŸ‘‹</h2>
        <h3>Your Active Tasks</h3>

        <ul class="task-list">
            <% tasks.forEach(task => { %>
                <li class="task-item">
                    <div class="task-info">
                        <div class="task-name"><%= task.name %></div>
                        <div class="task-description"><%= task.description %></div>
                    </div>
                    <div class="task-actions">
                        <div class="task-status status-<%= task.status.replace(' ', '-') %>">
                            <%= task.status %>
                        </div>
                        <a href="/tasks/<%= task._id %>/edit" class="edit-btn">Edit</a>
                    </div>
                </li>
            <% }) %>
        </ul>

        <!-- Pagination Controls -->
  <div class="pagination">
    <% if (currentPage > 1) { %>
      <a href="?page=<%= currentPage - 1 %>" class="page-link">Previous</a>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
      <a href="?page=<%= i %>" class="page-link <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
    <% } %>

    <% if (currentPage < totalPages) { %>
      <a href="?page=<%= currentPage + 1 %>" class="page-link">Next</a>
    <% } %>
  </div>

        <div style="text-align: center;">
            <a href="/logout" class="logout">Log Out</a>
        </div>
    </div>
</body>
</html>